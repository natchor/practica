@{
}

<div class="table-responsive">
    <table id="tblUsuario" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Identificador
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Cargo
                </th>
                <th>
                    Sector
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Acciones
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (UserTablaModel user in ViewBag.tablaUser)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Cargo</td>
                    <td>@user.Sector</td>
                    <td>
                        @((bool)user.Estado ? "Activo" : "Inactivo")
                    </td>
                    <td>
                        <a href="/Usuario/EditarUsuario/@user.Id"><i class="fa fa-user-edit" aria-hidden="true"></i></a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>

        Index = function () {

            $(document).ready(function () {
                $('#tblPrograma').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });
        }();

    </script>
