@{
}

<!-- Sidebar -->

<div class="">
    <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
        <li>
            <a href="#">
                <span id="menu-toggle-2"><i class="fas fa-bars fa-2x"></i></span>
            </a>
            <!-- <a href="#"><span class="navbar-toggle collapse in" data-toggle="collapse" ><i class="fa fa-cloud-download fa-stack-1x "></i></i></span></a> -->

        </li>
    </ul>

</div>
<div id="profileId" class="profile">
    <input id="hdnColaps" type="hidden" value="hola" />

    <h5 class="text-dark text-center">@Context.User.FindFirst(CustomClaims.FullName).Value</h5>
    <div class="mt-3 text-center">
        <p>@Context.User.FindFirst(CustomClaims.RoleStr).Value</p>
        <p>@Context.User.FindFirst(CustomClaims.Cargo).Value</p>
        <p>@Context.User.FindFirst(CustomClaims.Sector).Value</p>
        <input id="hdnRolId" type="hidden" value="@Context.User.FindFirst(CustomClaims.RoleId).Value" />
        <input id="hdnCargoId" type="hidden" value="@Context.User.FindFirst(CustomClaims.CargoId).Value" />

    </div>
</div>
<div class="position-sticky pt-3">
    <ul class="sidebar-nav nav-pills nav-stacked" id="menu">

        @*<ul class="nav flex-column">*@
        <li>
            <a id="homeId" aria-current="page" asp-controller="Home" asp-action="Index">
                <span>
                    <i class="fas fa-home fa-2x" title="Inicio"></i>
                    <span class="text-ico"> Inicio </span>
                </span>
            </a>
        </li>

        @if (Context.User.FindFirst(PermissionsClaims.ModificaMatrizAprobacion).Value._toBool())
        {
            <li>
                <a asp-controller="Aprobacion" asp-action="Index">
                    <i class="fas fa-chart-bar fa-2x" title="Matriz de aprobación"></i>
                    <span class="text-ico">Matriz de aprobación</span>
                </a>
            </li>

            <li>
                <a asp-controller="BackOffice" asp-action="Anular">
                    <i class="fas fa-ban fa-2x" title="Anular"></i> 
                    <span class="text-ico">Deshacer Procesos</span>
                </a>
            </li>
            
            
        }

        @if (Context.User.FindFirst(PermissionsClaims.PuedeAsignar).Value._toBool())
        {
            <li>
                <a asp-controller="Asignacion" asp-action="Asignacion">
                    <i class="fas fa-user-tag fa-2x" title="Asignación"></i>
                    <span class="text-ico"> Asignación</span>
                </a>
            </li>
        }



        @if (Context.User.FindFirst(PermissionsClaims.AdmMantenedores).Value._toBool())
        {
            <li>
                <a asp-controller="Usuario" asp-action="Index">
                    <i class="fas fa-users fa-2x" title="Usuarios"></i>
                    <span class="text-ico"> Usuarios</span>
                </a>
            </li>
            <li>
                <a asp-controller="BackOffice" asp-action="Index">
                    <i class="fas fa-cogs fa-2x" title="Mantenedores"></i>
                    <span class="text-ico"> Mantenedores</span>
                </a>
            </li>
        }

        @if (Context.User.FindFirst(PermissionsClaims.Reportes).Value._toBool())
        {
            <li>
                <a asp-controller="Reporte" asp-action="Reporte">
                    <i class="fas fa-paste fa-2x" title="Reportes"></i>
                    <span class="text-ico"> Reportes</span>
                </a>

            </li>
        }

        @if (Context.User.FindFirst(PermissionsClaims.AjustarCDP).Value._toBool())
        {
            <li>
                <a asp-controller="AjustarCDP" asp-action="Ajusta">
                    <i class="fas fa-wrench fa-2x" title="Ajustar CDP"></i>
                    <span class="text-ico"> Ajustar CDP</span>
                </a>
            </li>
        }
        @if (Context.User.FindFirst(PermissionsClaims.ApruebaCDP).Value._toBool())
        {
            <li>
                <a asp-controller="AjustarCDP" asp-action="Autoriza">
                    <i class="fas fa-clipboard-check fa-2x" title="Autoriza ajuste CDP"></i>
                    <span class="text-ico">Autoriza ajuste CDP</span>
                </a>

            </li>
        }
        <li>
            @if (Context.User.Identity.IsAuthenticated)
            {

                <a asp-controller="Login" asp-action="Logout">
                    <i class="fas fa-sign-out-alt fa-2x" title="Salir"></i>
                    <span class="text-ico"> Salir</span>
                </a>

                @*<form class="d-flex" asp-action="Logout" asp-controller="Login">

                    <button class="btn btn-outline-warning" type="submit">Salir</button>
                </form>*@
            }
        </li>
    </ul>

</div>