@{
    ViewData["Title"] = "Concepto Presupuestario";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom text-center">
    <div>
      <a href="/Concepto/EditarConcepto/0" class="btn btn-outline-success btn-lg">Crear Concepto Presupuestario</a>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="divUsuario"></div>
            <div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
                <div class="mt-3">
                    <table id="tblConcepto" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Identificador
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Acciones
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Entidad.Interfaz.Models.ConceptoPresupuestarioModels.ConceptoPresupuestarioModel conc in ViewBag.tablaConcepto)
                            {
                                <tr>
                                    <td>@conc.Id</td>
                                    <td>@conc.Nombre</td>
                                    <td>@((bool)conc.Estado ? "Activo" : "Inactivo")</td>

                                    <td><a href="/Concepto/EditarConcepto/@conc.Id"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-11">
            <button type="button" id="btnRegresarMantenedor" class="btn btn-primary">Regresar</button>
        </div>
    </div>
    <br />
</div>


<div id="modals"></div>

@section Scripts{
    <script>

        Index = function () {

            $(document).ready(function () {
                $('#tblConcepto').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });


