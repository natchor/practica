@model SectorModel;
@{
    ViewData["Title"] = "Editar Sector";
}


<div class="container">
    @*<form id="frmEditar" asp-action="EditarUsuario" asp-controller="Usuario" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">*@


        <div class="card bg-light text-dark">
            <div class="card-body">
                <h5 class="card-title">@ViewBag.Titulo</h5>
                <br />
                <input id="SectorId" name="SectorId" type="hidden" value="@ViewBag.Id" />

                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Nombre"><b>Nombre</b></label>
                        <input class="form-control" type="text" id="txtNombre" placeholder="Nombre">
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Codigo"><b>Código</b></label>
                        <input class="form-control" type="text" id="txtCodigo" placeholder="Código">
                    </div>
                </div>
                <br />
        
    
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="SectorPadreId"><b>Sector Padre</b></label>
                            <select asp-for="SectorPadreId" class="form-control" id="txtSector">
                                <option selected="SectorPadreId"></option>
                            </select>
                        </div>

                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Estado"><b>Estado</b></label>
                            <select asp-for="Estado" class="form-control" id="txtEstado">
                                <option value="True" data-valor="true">Activo</option>
                                <option value="False" data-valor="false">Inactivo</option>
                            </select>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-sm-11">
                <button type="button" id="btnSectorEditar" class="btn btn-primary">@ViewBag.Titulo</button>
                <button type="button" id="btnRegresar" class="btn btn-outline-secondary">Regresar</button>
            </div>


        </div>
        <br />
    @*</form>*@
</div>
@section Scripts{
    <script>

        EditaSector = function () {

            $(document).ready(function () {
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });


            return {
                urlPostCargar: "@Url.Action(nameof(Web.ReqCompra.Controllers.BackOfficeController.PostCargar), "BackOffice")",
                urlGetSector: "@Url.Action(nameof(Web.ReqCompra.Controllers.SolicitudController.GetSector), "Solicitud")",
                urlPostGrabar: "@Url.Action(nameof(Web.ReqCompra.Controllers.BackOfficeController.PostGrabarSector), "BackOffice")",

                }

        }();

    </script>
    <script type="text/javascript" src="~/js/BackOffice/_EditarSector.js" asp-append-version="true"></script>
}


