@{
    ViewData["Title"] = "Sector";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom text-center">
    <div>
        <a href="/Sector/EditarSector/0" class="btn btn-outline-success btn-lg">Crear Sector</a>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="divSector"></div>
            <div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
                <div class="mt-3">
                    <table id="tblSector" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Identificador
                                </th>
                                <th>
                                    Sector
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Acciones
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (SectorModel Sector in ViewBag.tablaSector)
                            {
                                <tr>
                                    <td>@Sector.Id</td>
                                    <td>@Sector.Nombre</td>
                                    <td>@((bool)Sector.Estado ? "Activo" : "Inactivo")</td>
                                    <td><a href="/Sector/EditarSector/@Sector.Id"><i class="fa fa-edit" aria-hidden="true"></i></a></td>                         
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            </div>


        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-11">
            <button type="button" id="btnRegresarMantenedor" class="btn btn-primary">Regresar</button>
        </div>
    </div>
    <br />
</div>


<div id="modals"></div>

@section Scripts{
    <script>

        Index = function () {

            $(document).ready(function () {
                $('#tblSector').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });

        }();

    </script>
    <script type="text/javascript" src="~/js/BackOffice/_EditarSector.js" asp-append-version="true"></script>
}

