@{
    ViewData["Title"] = "Estado";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom text-center">
    <div>
        <a href="/Estado/EditarEstado/0" class="btn btn-outline-success btn-lg">Crear Estado</a>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="divEstado"></div>
            <div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
                <div class="mt-3">
                    <table id="tblEstado" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Identificador
                                </th>
                                <th>
                                    Nombre Estado
                                </th>
                                <th>
                                    ¿Permite Generar Orden de Compra?
                                </th>
                                <th>
                                    Acciones
                                </th>


                            </tr>
                        </thead>
                        <tbody>

                            @foreach (EstadoModel estado in ViewBag.tablaEstado)
                            {
                                <tr>
                                    <td>@estado.Id</td>
                                    <td>@estado.Nombre</td>
                                    <td>
                                        @((bool)estado.PermiteGenerarOC ? "Si" : "No")
                                    </td>
                                    <td>
                                        <a href="/Estado/EditarEstado/@estado.Id"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-11">
            <button type="button" id="btnRegresarMantenedor" class="btn btn-primary">Regresar</button>
        </div>
    </div>
    <br />
</div>


<div id="modals"></div>

@section Scripts{
    <script>

        Estado = function () {

            $(document).ready(function () {
                $('#tblEstado').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });


        }();

    </script>
    <script type="text/javascript" src="~/js/BackOffice/_EditarEstado.js " asp-append-version="true"></script>
}

