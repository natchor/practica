@{
    ViewData["Title"] = "Rol";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom text-center">
    <div>
        @*<form asp-controller="Rol" asp-action="EditarRol" method="post" class="form-horizontal"><button id="crearRolId" type="submit" class="btn btn-outline-success btn-lg"></button> </form>*@
        <a href="/Rol/EditarRol/0" class="btn btn-outline-success btn-lg">Crear Rol</a>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="divRol"></div>
            <div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
                <div class="mt-3">
                    <table id="tblRol" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Identificador
                                </th>
                                <th>
                                    Rol
                                </th>
                                <th>
                                    Acciones
                                <th>
                       
                                @*<th>
                                    Estado
                                </th>*@

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (RoleModel Role in ViewBag.tablaRol)
                            {
                                <tr>
                                    <td>@Role.Id</td>
                                    <td>@Role.Nombre</td>
                                    <td><a href="/Rol/EditarRol/@Role.Id"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-11">
            <button type="button" id="btnRegresarMantenedor" class="btn btn-primary">Regresar</button>
        </div>
    </div>
    <br />
</div>




<div id="modals"></div>

@section Scripts{
    <script>

        Rol = function () {

            $(document).ready(function () {
                $('#tblRol').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });

        }();

    </script>
    <script type="text/javascript" src="~/js/BackOffice/_EditarCargo.js " asp-append-version="true"></script>
}

