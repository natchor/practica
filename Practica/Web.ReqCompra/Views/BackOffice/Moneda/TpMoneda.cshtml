@{
    ViewData["Title"] = "Tipo de Moneda";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom text-center">
    <div>
        <a href="/Moneda/EditarMoneda/0" class="btn btn-outline-success btn-lg">Crear TpMoneda</a>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="divTpMoneda"></div>
            <div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
                <div class="mt-3">
                    <table id="tblTpMoneda" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Identificador
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Codigo
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Valor
                                </th>
                                <th>
                                    Fecha Solicitud
                                </th>
                                <th>
                                    Fecha Referencia
                                </th>
                                @*<th>
                                    UrlCMF
                                </th>
                                *@
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (TipoMonedaModel moneda in ViewBag.tablaMoneda)
                            {
                                <tr>
                                    <td>@moneda.Id</td>
                                    <td>@moneda.Nombre</td>
                                    <td>@moneda.Codigo</td>
                                    <td>@((bool)moneda.Estado ? "Activo" : "Inactivo")</td>
                                    <td>@moneda.Valor</td>
                                    <td>@moneda.FechaSolicitud</td>
                                    <td>@moneda.FechaReferencia</td>
                                    @*<td>@moneda.UrlCMF</td>*@
                                    <td><a href="/Moneda/EditarMoneda/@moneda.Id"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-11">
            <button type="button" id="btnRegresarMantenedor" class="btn btn-primary">Regresar</button>
        </div>
    </div>
    <br />
</div>


<div id="modals"></div>

@section Scripts{
    <script>

        Index = function () {

            $(document).ready(function () {
                $('#tblTpMoneda').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });

        }();

    </script>
    <script type="text/javascript" src="~/js/BackOffice/_EditarTpMoneda.js" asp-append-version="true"></script>
}

