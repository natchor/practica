@{
    ViewData["Title"] = "Programa Presupuestario";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom text-center">
    <div>
		<a href="/Programa/EditarPrograma/0" class="btn btn-outline-success btn-lg">Crear Programa</a>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="divPrograma"></div>
            <div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
                <div class="mt-3">
                    <table id="tblPrograma" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Identificador
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (ProgramaPresupuestarioModel Programa in ViewBag.tablaPrograma)
                            {
                                <tr>
                                    <td>@Programa.Id</td>
                                    <td>@Programa.Nombre</td>
                                    <td>@((bool)Programa.Estado ? "Activo" : "Inactivo")</td>
                                    <td><a href="/Programa/EditarPrograma/@Programa.Id"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-11">
            <button type="button" id="btnRegresarMantenedor" class="btn btn-primary">Regresar</button>
        </div>
    </div>
    <br />
</div>


<div id="modals"></div>

@section Scripts{
    <script>

        Index = function () {

            $(document).ready(function () {
                $('#tblPrograma').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });


            @*return {
             urlGetSolicitudes: "@Url.Action(nameof(Web.ReqCompra.Controllers.ProgramaController.GetSolicitudes), "Programa")",
             urlGetAprobaciones: "@Url.Action(nameof(Web.ReqCompra.Controllers.ProgramaController.GetAprobaciones), "Programa")",
             urlGetGestion: "@Url.Action(nameof(Web.ReqCompra.Controllers.ProgramaController.GetGestion), "Programa")",
            }*@

        }();

    </script>
    <script type="text/javascript" src="~/js/BackOffice/_EditarPrograma.js" asp-append-version="true"></script>
}

