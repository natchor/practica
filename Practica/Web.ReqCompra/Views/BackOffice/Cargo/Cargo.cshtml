@{
    ViewData["Title"] = "Cargo";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom text-center">
    <div>
        <a href="/Cargo/EditarCargo/0" class="btn btn-outline-success btn-lg">Crear Cargo</a>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div id="divCargo"></div>
            <div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
                <div class="mt-3">
                    <table id="tblCargo" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Identificador
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Acciones
                                <th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (CargoModel Cargo in ViewBag.tablaCargo)
                            {
                                <tr>
                                    <td>@Cargo.Id</td>
                                    <td>@Cargo.Nombre</td>
                                    <td>
                                        <a href="/Cargo/EditarCargo/@Cargo.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-11">
            <button type="button" id="btnRegresarMantenedor" class="btn btn-primary">Regresar</button>
        </div>
    </div>
    <br />
</div>


<div id="modals"></div>

@section Scripts{
    <script>

        Cargo = function () {

            $(document).ready(function () {
                $('#tblCargo').DataTable();
                $('#divIndicadoresEconomicos').css('display', 'none');
                $('#divIndicadoresEconomicos').hide();
            });
 
        }();

    </script>
    <script type="text/javascript" src="~/js/BackOffice/_EditarCargo.js " asp-append-version="true"></script>
}