@{ 


}
<h2 class="text-primary">Matiriz Aprobaciones</h2>
<div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
    <div class="mt-3">
        <table id="tblAprobacion" class="table table-striped table-bordered">
            <thead>
                <tr>                
					<th>Aprobador Actual</th>
					<th>Aprobación Config</th> 
					<th>Fecha Aprobación</th>
					<th>Usuario</th>
					<th>Aprobado</th>
					<th>Observación</th>
					<th>Orden</th>
					<th width="10%">Editar</th>			
					
                </tr>
            </thead>
            <tbody>

                @foreach (AprobacionModel apro in ViewBag.tablaAprobaciones)
                {
                <tr Aprobid="@apro.Id">
                    @*<td>@apro.Id</td>*@
                    <td>
                        <div class="form-check form-switch">
                            @{
                                bool habilitado = !apro.PuedeAprobar;
                            }
                            <input class="form-check-input" name="swtActual" type="checkbox" checked="@apro.Actual" disabled="@habilitado">
                        </div>
                    </td>
                    <td><div class="divAprobacionId">@apro.AprobacionConfig.Nombre </div></td>
                    <td>@apro.FechaAprobacion</td>
                    <td ><div class="divAprobadorId">@apro.UserAprobador.FullName </div> </td>
                    <td> 
@if (@apro.EstaAprobado)
{  <span style="font-size: 2em;  color: LightGreen;"><i class="far fa-check-circle"></i></span>  }
else
{ <span style="font-size: 2em; color: Tomato;"><i class="far fa-times-circle"></i></span> }
                    </td>
                    <td>@apro.Observacion</td>
                    <td ><div class="divOrdenId">@apro.Orden </div></td>
                    <td IdOrden="@apro.Orden" IdAprobador="@apro.UserAprobadorId" IdAprobacionConfig="@apro.AprobacionConfigId" IdAprobacion="@apro.Id" IdSolicitud="@apro.SolicitudId">
                        <div class="row divAcciones">
                            <div class="col-6">
                                <button type="button" class="btn btn-warning BtnAprobacion" title="Editar"> <i class="fas fa-edit"></i></button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-danger BtnEliminar" title="Eliminar"> <i class="fas fa-trash-alt"></i></button>
                            </div>
                            @*<div class="col-4">
                                
                            </div>*@
                        </div>
                     </td>
                
                
                </tr>

                }



            </tbody>
        </table>
    </div>


</div>




