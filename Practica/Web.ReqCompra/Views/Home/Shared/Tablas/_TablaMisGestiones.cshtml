@*<h2 class="text-primary">Mis Solicitudes</h2>*@
<div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
    <div class="mt-3">
        <table id="tblSolicitudes" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th style="width:10%">Nº Solicitud</th>
                    <th style="width:30%">Nombre de la Compra</th>
                    <th style="width:10%">Modalidad de Compra</th>
                    <th style="width:15%">Monto estimado total OC</th>
                    <th style="width:15%">Estado de tramitacion de la Solicitud</th>
                    <th style="width:15%">Num OC</th>
                    <th style="width:5%">Acción</th>
                </tr>
            </thead>
            <tbody>

                @foreach (MisGestionesTablaModel solic in ViewBag.tablaMisGestiones)
                {
                <tr id="row-@solic.Id" >
                    <td>@solic.NroSolicitud</td>
                    <td>
                        <a asp-action="Ver" asp-controller="Solicitud" asp-route-solicitudId="@solic.Id">@solic.NombreCompra</a>


                    </td>
                    <td>@solic.TipoCompra</td>
                    <td>@solic.MontoAprox (@solic.TipoMoneda) </td>
                    <td>@solic.CodEstadoLicitacion</td>
                    <td>@solic.OrdenCompra</td>
                    <td tpCompId="@solic.TipoCompraId">

                        <div class="btn-group btn-group-sm" role="group" aria-label="Grupo de botones para realizar acciones">
                            <button type="button" id="btnLicitacion" data-solicitudId="@solic.Id" class="btn btn-outline-primary" title="Estado licitación">
                                <i class="fas fa-file-contract"></i>
                            </button>
                            @if(solic.TieneContrato) { 
                            <button type="button" id="btnContrato" data-solicitudId="@solic.Id" class="btn btn-outline-primary" title="Agregar fechas contrato">
                                <i class="fas fa-file-contract"></i>
                            </button>}
