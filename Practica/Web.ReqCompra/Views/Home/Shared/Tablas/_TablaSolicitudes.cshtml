@{ }
@*<h2 class="text-primary">Mis Solicitudes</h2>*@
<div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
    <div class="mt-3">
        <table id="tblSolicitudes" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nº Solicitud</th>
                    <th>Fecha solicitud</th>
                    <th>Nombre de la Compra</th>
                    <th>Aprobador actual</th>
                    <th>Estado</th>
                    <th>Derivado fecha</th>
                    <th>Num OC</th>
                    <th>Responsable recepción</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>

                @foreach (MisSolicitudTablaModel solic in ViewBag.tablaMisSolictudes)
                {
                <tr>
                    <td>@solic.NroSolicitud</td>
                    <td>@solic.FechaCreacion</td>
                    <td>
                        <a asp-action="Ver" asp-controller="Solicitud" asp-route-solicitudId="@solic.Id">@solic.NombreCompra</a>


                    </td>
                    <td>@solic.AprobadorActualStr</td>
                    <td>@solic.Estado</td>
                    <td>@solic.FechaDerivacionAnalista</td>
                    <td>@solic.OrdenCompra</td>
                    <td>@solic.ContraparteTecnica</td>
                    <td>
                        @if (Estados.RechazadaEnAprobacion == solic.EstadoId)
                        {
                            <a asp-action="Editar" asp-controller="Solicitud" asp-route-solicitudId="@solic.Id" class="btn btn-outline-primary" title="Editar"><i class="fas fa-edit"></i></a>

                        }

                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>


</div>




