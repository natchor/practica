<div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
    <div class="mt-3">
        <div>
            Mostrar/Ocultar Columnas: 
            <select id="selectColumnas" class="form-control" multiple="multiple">
                <option value="0">Nº Solicitud</option>
                <option value="1">Fecha solicitud</option>
                <option value="2">Nombre de la Compra</option>
                <option value="3">Analista de Compra</option>
                <option value="4">Presupuesto</option>
                <option value="5">Usuario solicitante</option>
                <option value="6">Aprobador actual</option>
                <option value="7">Estado</option>
                <option value="8">Fase CDP</option>
                <option value="9">Folio Requerimiento SIGFE</option>
            </select>

        </div>

        <table id="tblSolicitudes" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nº Solicitud</th>
                    <th>Fecha solicitud</th>
                    <th>Nombre de la Compra</th>


                    <th>Usuario solicitante</th>
                    <th>Analista Compra</th>
                    <th>Presupuesto</th>
                    <th>Aprobador actual</th>
                    <th>Estado</th>
                    <th>Fase CDP</th>
                    <th>Folio Requerimiento SIGFE</th>
                </tr>
            </thead>
            <tbody>

                @foreach (GestionSolicitudesTablaModel solic in ViewBag.tablaGestionSolictudes)
                {
                <tr>
                    <td>@solic.NroSolicitud</td>
                    <td>@solic.FechaCreacion</td>
                    <td>
                        <a asp-action="Ver" asp-controller="Solicitud" asp-route-solicitudId="@solic.Id" class="" title="Ver detalle">
                            @solic.NombreCompra
                        </a>
                    </td>
                    <td>@solic.NombreSolicitante</td>
                    <td>@solic.AnalistaProcesoStr</td>
                    <td>@solic.FuncionarioPresupuestoStr</td>

                    <td>@solic.AprobadorActualStr</td>
                    <td>@solic.EstadoStr</td>
                    <td>@solic.FaseCDP</td>
                    <td>@solic.FolioRequerimientoSIGFE</td>
                </tr>
                }

            </tbody>
        </table>
    </div>


</div>
