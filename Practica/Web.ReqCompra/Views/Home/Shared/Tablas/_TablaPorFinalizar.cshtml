@{ }
@*<h2 class="text-primary">Por Finalizar</h2>*@
<div class="tab-pane fade show active" id="solicitud" role="tabpanel" aria-labelledby="solicitud-tab">
    <div class="mt-3">
        <table id="tblSolicitudes" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nº Solicitud</th>
                    <th>Fecha solicitud</th>
                    <th>Nombre de la Compra</th>
                    @*<th>Derivado a unidad</th>*@
                    <!--<th>Derivado fecha</th>--> <!-- fecha de cuando todos ya aprobaron -->
                    <!--<th>Num OC</th>-->
                    <th>Aprobador actual</th>
                    <th>Aprobador CDP</th>
                    <th>Estado</th>
                    <th>Fase CDP</th>
                    <th>Usuario solicitante</th>
                    @*<th>Acción</th>*@
                </tr>
            </thead>
            <tbody>

                <!-- TODO: Cambiar entidad por un FinalizarTablaModel -->
                @foreach (SolicitudPorFinalizarModel solic in ViewBag.tablaPorFinalizar)
                {
                <tr>
                    <td>@solic.NroSolicitud</td>
                    <td>@solic.FechaCreacion</td>
                    @*<td>@solic.NombreCompra </td>*@
                    <td>
                        <a asp-action="Ver" asp-controller="Solicitud" asp-route-solicitudId="@solic.Id" asp-route-rutaOrigen="PF" class="" title="Ver detalle">
                            @solic.NombreCompra
                        </a>
                    </td>

                    @*<td>@solic.AnalistaProcesoId</td>*@
                    <!--<td></td>--> <!-- fecha de cuando todos ya aprobaron -->

                    <td>@solic.AprobadorActualStr</td>
                    <td>@solic.AprobadorCDPStr</td>
                    <td>@solic.EstadoStr</td>
                    <td>@solic.FaseCDP</td>
                    <td>@solic.NombreSolicitante</td>


                    @*<td>
            @if (solic.TieneQueAprobar)
            {
                <a asp-action="Aprobacion" asp-controller="Solicitud" asp-route-solicitudId="@solic.Id" class="btn btn-warning" title="Aprobar"><i class="far fa-thumbs-up"></i></a>

            }

        </td>*@


                </tr>

                }



            </tbody>
        </table>
    </div>


</div>




